# 환경 설정
NODE_ENV=production

# 데이터베이스 설정 (AWS RDS)
DB_HOST=your-rds-endpoint.rds.amazonaws.com
DB_PORT=5432
DB_USERNAME=dbadmin
DB_PASSWORD=your-secure-password
DB_NAME=cookie_pokie

# 서버 설정
SERVER_PORT=4000
CLIENT_URL=https://cookiepokie.com

# 클라이언트 설정
CLIENT_PORT=3000
API_URL=https://api.cookiepokie.com/api

# AWS S3 설정
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=cookie-pokie-frontend

# CloudFront 설정
CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id
CLOUDFRONT_DOMAIN=your-distribution-domain.cloudfront.net

# 도메인 설정
DOMAIN_NAME=cookiepokie.com
API_DOMAIN_NAME=api.cookiepokie.com 